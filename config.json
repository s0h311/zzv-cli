{
  "baseDirEnv": "ZZV_PROJECT_DIR",
  "dockerContainerName": "zzv",
  "projects": [
    {
      "name": "zzv-frontend",
      "short": "fe",
      "path": "$ZZV_PROJECT_DIR/zzv-frontend",
      "type": "node",
      "env": "host",
      "buildCmds": [
        "npm ci",
        "npm run build:desktop:development",
        "npm run build:mobile:development"
      ],
      "isMainProject": true
    },
    {
      "name": "zzv-core",
      "short": "core",
      "path": "$ZZV_PROJECT_DIR/zzv-core",
      "pathInDocker": "/home/zzv-core/current/www",
      "type": "php",
      "env": "docker",
      "buildCmds": ["composer i --ignore-platform-reqs"],
      "isMainProject": true
    },
    {
      "name": "zzv-api",
      "short": "api",
      "path": "$ZZV_PROJECT_DIR/zzv-api",
      "pathInDocker": "/home/zzv-api/current/www",
      "type": "php",
      "env": "docker",
      "buildCmds": ["composer i"],
      "isMainProject": true
    },
    {
      "name": "zzv-app-check24",
      "short": "app",
      "path": "$ZZV_PROJECT_DIR/zzv-app-check24",
      "pathInDocker": "/home/zzv-app-check24/current/www",
      "type": "php",
      "env": "docker",
      "buildCmds": ["composer i"],
      "isMainProject": false
    },
    {
      "name": "zzv-end2end",
      "short": "e2e",
      "path": "$ZZV_PROJECT_DIR/vendor/zzv-end2end",
      "pathInDocker": "/home/vendor/zzv-end2end",
      "type": "php",
      "env": "docker",
      "buildCmds": ["composer i"],
      "isMainProject": false
    }
  ]
}
